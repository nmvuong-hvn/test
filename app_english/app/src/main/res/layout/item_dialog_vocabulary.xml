<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="25dp"
    android:elevation="0dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf,UselessParent">
            <RelativeLayout
                android:layout_gravity="end"
                android:paddingVertical="8dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/custom_close_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/baseline_close_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_margin="25dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cv_layout_vocabulary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingVertical="16dp"
                android:paddingHorizontal="25dp"
                android:background="@drawable/custom_layout_boder_dialog_vocabulary"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="20sp"
                    android:id="@+id/tv_level"
                    android:text="Easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                
                
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_vocabulary"
                    app:layout_constraintTop_toBottomOf="@id/tv_level"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="85dp"
                    android:layout_height="85dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    app:fontFamily="@font/opensans_semibold"
                    android:layout_marginTop="23dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_vocabulary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="24sp"
                    android:id="@+id/tv_name_vocabulary"
                    android:text="Cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    app:fontFamily="@font/opensans_regular"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name_vocabulary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="12sp"
                    android:id="@+id/tv_pronoun"
                    android:text="/kæt/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    app:fontFamily="@font/opensans_semibold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pronoun"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="18sp"
                    android:id="@+id/tv_mean"
                    android:text="Con mèo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    app:fontFamily="@font/opensans_semibold"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mean"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="16sp"
                    android:id="@+id/tv_meaning"
                    android:text="Meaning:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    app:fontFamily="@font/opensans_regular"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_meaning"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="16sp"
                    android:id="@+id/tv_analysis"
                    android:text="A large wild animal of the cat family with yellowish-brown fur that lives in Africa and Southern Asia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatTextView
                    app:fontFamily="@font/opensans_semibold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_analysis"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="16sp"
                    android:id="@+id/tv_example"
                    android:text="Example:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    app:fontFamily="@font/opensans_regular"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_example"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="16sp"
                    android:id="@+id/tv_content_example"
                    android:text="The lion loped across the grass."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <RelativeLayout
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_content_example"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/custom_button_dialog_vocabulary"
                        android:id="@+id/btn_previous"
                        android:text="Previous"
                        android:textSize="16sp"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:paddingHorizontal="16dp"

                        android:background="@drawable/custom_button_dialog_vocabulary"
                        android:id="@+id/btn_next"
                        android:layout_alignParentEnd="true"
                        android:text="Next"
                        android:textSize="16sp"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>